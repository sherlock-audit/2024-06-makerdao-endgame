{
  "extends": "solhint:recommended",
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": "warn",
    "check-send-result": "off",
    "custom-errors": "off",
    "compiler-version": "off",
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ],
    "max-line-length": "off",
    "multiple-sends": "off",
    "not-rely-on-time": "off",
    "one-contract-per-file": "off"
  }
}
